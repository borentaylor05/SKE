<!DOCTYPE html>
<html>
<head>
  <title>SKE</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <%= link_to "SKE Admin", '/', id: "logo", class: "pull-left" %>
        <nav>
          <ul class="nav navbar-nav navbar-right pull-right">
        			<% if admin_signed_in? %>
                <li><%= link_to "Article Request", "/" %></li>
                <li><%= link_to "View Requests", "/fx/tickets" %></li>
                <li><%= link_to "Change your password", edit_admin_registration_path %></li>
        				<li><%= link_to "Log out", destroy_admin_session_path, :method => :delete %></li>
        			<% else %>
            	<li><%= link_to "Log in", '/admins/sign_in' %></li>
          	<% end %>
          </ul>
        </nav>
      </div>
    </header>
	<div class="container">
		<%= yield %>	
	</div>
</body>
</html>
